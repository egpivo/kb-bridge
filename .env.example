# MCP Knowledge Base Assistant - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# RETRIEVAL_ CONFIGURATION
# =============================================================================
RETRIEVAL_ENDPOINT=your-etrieval-instance
RETRIEVAL_API_KEY=your-retrieval-api-key-here

# =============================================================================
# LLM CONFIGURATION (Self-hosted)
# =============================================================================
LLM_API_URL=https://your-llm-instance
LLM_MODEL=your-llm-model
LLM_API_TOKEN=  # Leave empty for self-hosted LLMs

# =============================================================================
# RERANKING CONFIGURATION (Optional)
# =============================================================================
RERANK_URL=https://your-reranker-instance
RERANK_MODEL=your-reranker-model

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Development: DEBUG (verbose logging)
# Production: WARNING (only warnings and errors)
# Testing: ERROR (only errors)
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=5210

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum number of workers for parallel processing
MAX_WORKERS=3

# Timeout for API calls (seconds)
TIMEOUT=30

# =============================================================================
# CONTENT BOOSTER CONFIGURATION
# =============================================================================
# Enable content boosting for better search results
USE_CONTENT_BOOSTER=true

# Maximum number of boost keywords to generate
MAX_BOOST_KEYWORDS=5

# =============================================================================
# VERBOSE MODE
# =============================================================================
# Enable verbose output for debugging
VERBOSE=false

# =============================================================================
# TIMEOUT CONFIGURATIONS
# =============================================================================
# Overall request timeout (seconds) - Total time for entire request processing
# Default: 300 (5 minutes) - Increase for complex queries
OVERALL_REQUEST_TIMEOUT=300

# MCP client timeout (seconds) - Timeout for MCP client connections
# Default: 300 (5 minutes) - Should match OVERALL_REQUEST_TIMEOUT
MCP_CLIENT_TIMEOUT=300

# Retrieval API timeout (seconds) - Timeout for retrieval API calls
# Default: 60 (1 minute) - Increase if retrieval API is slow
RETRIEVAL_API_TIMEOUT=60

# LLM timeout (seconds) - Timeout for LLM API calls
# Default: 120 (2 minutes) - Increase for complex LLM processing
LLM_TIMEOUT_SECONDS=120

# =============================================================================
# TIMEOUT PRESETS FOR DIFFERENT USE CASES
# =============================================================================
# For simple queries (fast response):
# OVERALL_REQUEST_TIMEOUT=180
# MCP_CLIENT_TIMEOUT=180
# RETRIEVAL_API_TIMEOUT=30
# LLM_TIMEOUT_SECONDS=60

# For complex queries (comprehensive search):
# OVERALL_REQUEST_TIMEOUT=600
# MCP_CLIENT_TIMEOUT=600
# RETRIEVAL_API_TIMEOUT=120
# LLM_TIMEOUT_SECONDS=180

# For very complex queries (maximum processing time):
# OVERALL_REQUEST_TIMEOUT=900
# MCP_CLIENT_TIMEOUT=900
# RETRIEVAL_API_TIMEOUT=180
# LLM_TIMEOUT_SECONDS=300
